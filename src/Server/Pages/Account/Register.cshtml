@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>
<h5>Create a New Account.</h5>
<hr />
<form id="registrationForm" method="post" asp-route-returnUrl="@Model.ReturnUrl">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Input.UserName"></label>
            <input asp-for="Input.UserName" class="form-control" />
            <span asp-validation-for="Input.UserName" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Input.FirstName"></label>
            <input asp-for="Input.FirstName" class="form-control" />
            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Input.LastName"></label>
            <input asp-for="Input.LastName" class="form-control" />
            <span asp-validation-for="Input.LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Input.Password2"></label>
            <input asp-for="Input.Password2" class="form-control" />
            <span asp-validation-for="Input.Password2" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </div>
    <div class="form-row">
        <p><a asp-page="Login" asp-route-returnUrl="@Model.ReturnUrl">Login with an Existing Account</a></p>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 