@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<h1>@ViewData["Title"]</h1>
<h5>Use a Local Account to Login</h5>
<hr />
<form id="loginForm" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger list-unstyled"></div>
    <div class="form-row">
        <div class="form-group col-md-12">
            <label asp-for="Input.UserLogin"></label>
            <input asp-for="Input.UserLogin" class="form-control" />
            <span asp-validation-for="Input.UserLogin"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-12">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="custom-control custom-checkbox">
                <input asp-for="Input.RememberMe" type="checkbox" class="custom-control-input" />
                <label asp-for="Input.RememberMe" class="custom-control-label"></label>
            </div>
        </div>
        <div class="form-group col-md-6 text-md-right">
            <a asp-page="ForgotPassword" class="d-md-inline-block d-none">Forgot Password?</a>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <button type="submit" class="btn btn-primary w-100">Login</button>
        </div>
        <div class="form-group col-md-6">
            <a asp-page="Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-secondary w-100">Register</a>
        </div>
    </div>
    <div class="form-row d-md-none">
        <div class="form-group col-md-6 text-left">
            <a asp-page="ForgotPassword">Forgot Password?</a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
