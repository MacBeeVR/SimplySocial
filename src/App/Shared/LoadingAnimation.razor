<div class="loading-wrapper">
    <div class="loading">
        <h1>@Title</h1>
        <p>@Content</p>
        <i class="fa fa-spin fa-spinner"></i>
    </div>
</div>

@code {
    [Parameter] public String Title     { get; set; } = "Simply Social";
    [Parameter] public String Content   { get; set; } = "Loading App...";
}
